@page
@model ClipsModel
@{
    ViewData["Title"] = "Clips";
}

<div class="video-grid">
    @if (Model.DisplayedFiles != null && Model.DisplayedFiles.Count > 0)
    {
        foreach (var file in Model.DisplayedFiles)
        {
            <video controls>
                <source src="@file" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        }
    }
    else
    {
        <p>No clips uploaded yet.</p>
    }
</div>